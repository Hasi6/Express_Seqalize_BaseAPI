{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@routes/*": ["routes/*"],
      "@utils/*": ["utils/*"],
      "@controllers/*": ["controllers/*"],
      "@middlewares/*": ["middlewares/*"],
      "@data/*": ["data/*"],
      "@mixins/*": ["mixins/*"],
      "@services/*": ["services/*"]
    },
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "lib": ["esnext"],
    "watch": true,
    "typeRoots": ["types", "./node_modules/@types"]
  },
  "lib": ["es2015"]
}
